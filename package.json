{
  "name": "node-nodejs-basics",
  "version": "1.0.0",
  "description": "This repository is the part of nodejs-assignments",
  "scripts": {
    "start": "nodemon --watch \"src/**\" --ext \"ts,json\" --ignore \"src/**/*.test.ts\" --exec \"ts-node src/index.ts\"",
    "test": "jest --forceExit --verbose --maxWorkers=1",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "build": "npm run build-ts && npm run lint",
    "watch-ts": "tsc -w",
    "debug": "npm run build && npm run watch-debug",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve-debug": "nodemon --inspect dist/index.js",
    "serve": "node dist/index.js",
    "watch-node": "nodemon dist/index.js",
    "start:dev:simple": "npm run watch-ts && npm run watch-node",
    "start:dev:concurrent": "npx concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "start:prod": "npm run build-ts && npm run serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rss-maksim/remote-control-nodejs"
  },
  "keywords": [
    "nodejs",
    "assignments"
  ],
  "author": "Maksim",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rss-maksim/remote-control-nodejs"
  },
  "homepage": "https://github.com/rss-maksim/remote-control-nodejs#readme",
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "jimp": "^0.16.1",
    "robotjs": "^0.6.0",
    "uuid": "^8.3.2",
    "ws": "^8.8.0"
  },
  "devDependencies": {
    "@types/eslint": "7.29.0",
    "@types/jest": "^28.1.2",
    "@types/node": "^16.11.41",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "5.28.0",
    "@typescript-eslint/parser": "5.28.0",
    "eslint": "^8.17.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.7.1",
    "supertest": "6.2.3",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  }
}
